<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:id="@+id/connectionType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        android:layout_margin="16dp"
        style="@style/textScheme1.header2"
        tools:text="Type of Connection"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:id="@+id/connectionStatus1"
        tools:text="Online"
        android:layout_margin="16dp"
        style="@style/textScheme1.statusGreen"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:id="@+id/connectionStatus2"
        tools:text="Offline"
        android:layout_margin="16dp"
        style="@style/textScheme1.statusRed"
        />


</LinearLayout>